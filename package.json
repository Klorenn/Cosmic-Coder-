{
  "name": "vibe-coder",
  "version": "0.7.5",
  "description": "Vampire Survivors-style idle game powered by your Claude Code activity",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:pack": "electron-builder --dir",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "game",
    "phaser",
    "idle",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^10.0.0",
    "express": "^5.2.1",
    "phaser": "^3.90.0",
    "vite": "^7.3.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^33.4.0",
    "electron-builder": "^25.1.8",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.vibecoder.app",
    "productName": "Vibe Coder",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "!public/assets/sprites/player/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Vibe Coder",
      "backgroundColor": "#1a1a2e",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 190
        },
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Game",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
