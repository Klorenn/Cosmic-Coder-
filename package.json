{
  "name": "vibe-coder",
  "version": "0.7.6",
  "description": "Vampire Survivors-style idle game powered by your Claude Code activity",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:pack": "electron-builder --dir",
    "test": "vitest run",
    "test:watch": "vitest",
    "zk:build": "bash scripts/zk/build_circuit.sh",
    "zk:proof": "node scripts/zk/generate_proof.js",
    "zk:args": "node scripts/zk/contract_args_from_proof.js circuits/build",
    "zk:e2e": "bash scripts/e2e_zk.sh",
    "zk:noir:compile": "cd circuits/noir && nargo compile",
    "zk:noir:vk": "cd circuits/noir && bb write_vk -b target/gamerun_noir.json -o target --scheme ultra_honk --oracle_hash keccak --output_format bytes_and_fields"
  },
  "keywords": [
    "game",
    "phaser",
    "idle",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aztec/bb.js": "^0.87.0",
    "@noble/hashes": "^1.8.0",
    "@noir-lang/noir_js": "1.0.0-beta.9",
    "@stellar/freighter-api": "^5.0.0",
    "@stellar/stellar-base": "^14.0.0",
    "@stellar/stellar-sdk": "^14.5.0",
    "@supabase/supabase-js": "^2.97.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.6",
    "electron-store": "^10.0.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.3",
    "pg": "^8.13.0",
    "phaser": "^3.90.0",
    "snarkjs": "^0.7.6",
    "vite": "^7.3.1",
    "ws": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/snarkjs": "^0.7.9",
    "circomlib": "^2.0.5",
    "concurrently": "^9.1.2",
    "electron": "^33.4.0",
    "electron-builder": "^25.1.8",
    "sharp": "^0.34.5",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.cosmiccoder.app",
    "productName": "Cosmic Coder",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "!public/assets/sprites/player/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Cosmic Coder",
      "backgroundColor": "#1a1a2e",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 190
        },
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Game",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
